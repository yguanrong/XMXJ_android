<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".activity.SelectActivity">

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/home_toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="#ef262424"
                android:fitsSystemWindows="true">

                <TextView
                    android:id="@+id/hy_xm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:singleLine="true"
                    android:text="施工安全管理系统"
                    android:textColor="@android:color/white"
                    android:textSize="20sp"
                    android:visibility="visible"/>
            </android.support.v7.widget.Toolbar>

        </RelativeLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp">
        </View>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#4f895b">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="选择公司/项目"
                android:textColor="@android:color/white"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                android:id="@+id/title"/>
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="#EBEEF5">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center"
                android:background="#DCDFE6">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="用户名："
                        android:textColor="@color/Dark_color"
                        />
                    <!--最简单的加载下拉数组：entries，内容定义在string-array中-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="张三"
                        android:textColor="@color/Dark_color"
                        android:id="@+id/userName"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="所属公司："
                        android:textColor="@color/Dark_color"
                        />
                    <!--最简单的加载下拉数组：entries，内容定义在string-array中-->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="50dp"
                        android:gravity="center"
                        android:text="大修公司"
                        android:textColor="@color/Dark_color"
                        android:id="@+id/companyName"/>
                </LinearLayout>


            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:id="@+id/company_part_layout"
                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="选择分包公司："
                    android:textColor="@color/Dark_color"/>
                <!--最简单的加载下拉数组：entries，内容定义在string-array中-->
                <Spinner
                    android:id="@+id/spinner_company_part"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginStart="20dp"
                    android:entries="@array/spinner_company_part"
                    android:layout_marginLeft="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:gravity="center"
                android:id="@+id/item_layout"
                android:background="#DCDFE6">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:text="选择项目："
                    android:textColor="@color/Dark_color"/>
                <!--最简单的加载下拉数组：entries，内容定义在string-array中-->
                <Spinner
                    android:id="@+id/spinner_item"
                    android:textAlignment="center"
                    android:layout_width="wrap_content"
                    android:layout_height="50dp"
                    android:layout_marginLeft="20dp"
                    android:entries="@array/spinner_item"
                    android:layout_marginStart="20dp" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"

                >
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/isCompany_btn"
                    android:textColor="@android:color/white"
                    android:background="@drawable/shape_ret"
                    android:text="公司管理"
                    android:textSize="18dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/isItem_btn"
                    android:textColor="@android:color/white"
                    android:background="@drawable/shape_ret"
                    android:text="项目管理"
                    android:layout_marginLeft="20dp"
                    android:textSize="18dp"/>
                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:id="@+id/submit_btn"
                    android:text="确定"
                    android:textSize="20dp"
                    android:textColor="@android:color/white"
                    android:layout_marginStart="50dp"
                    android:background="@drawable/shape"
                    />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>


</android.support.constraint.ConstraintLayout>